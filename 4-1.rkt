(define (short-circut seq env short?)
  (if (null? seq)
      'true
      (let ((first (my-eval (first-exp seq) env))
            (rest (rest-exps seq)))
        (cond ((null? rest) first)
              ((short? first) first)
              (else (short-circut rest env short?))))))
