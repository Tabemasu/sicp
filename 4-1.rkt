(define (and->if seq (default 'true))
  (if ((null? seq) 
       default
       (let (rest (rest-exps seq))
         (make-let (list (cons 'first (first-exp seq)))
                   (make-if 'first
                            (and->if rest 'first)
                            'false))))))
(define (or->if seq)
  (if (null? seq)
       'false
       (let ((rest (rest-exps seq)))
         (make-let (list (cons 'first (first-exp seq)))
                   (make-if 'first
                            'first
                            (or->if rest))))))
(define (eval-and exp env)
  (my-eval (and->if exp) env))
(define (eval-or exp env)
  (my-eval (or->if exp) env))

