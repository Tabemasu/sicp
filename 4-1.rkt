(define (and->if seq)
  (if ((null? seq) 
       'true
       (let ((first (first-exp seq))
             (rest (rest-exps seq)))
         (make-if first
                  (if (null? rest)
                      first
                      (and->if rest))
                  'false)))))
(define (or->if seq)
  (if ((null? seq)
       'false
       (let ((first (first-exp seq))
             (rest (rest-exps seq)))
         (make-if first
                  first
                  (or->if rest))))))
